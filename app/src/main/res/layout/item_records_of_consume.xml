<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginRight="@dimen/margin_8"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="30dp"
            android:layout_height="47dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:textColor="@color/black"
                android:textSize="24dp"
                />

        </LinearLayout>
        <ImageView
            android:id="@+id/dian"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:src="@drawable/icon_orange"
            android:layout_toRightOf="@+id/ll_1"/>
        <TextView
            android:id="@+id/tv_qiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dian"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:layout_marginTop="@dimen/margin_8"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16dp"
            android:layout_marginTop="@dimen/margin_8"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_below="@+id/dian"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/ll_1"
            >
        </View>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp">
        <LinearLayout
            android:id="@+id/ll_kon"
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_month"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="30dp"
                android:layout_height="100dp"
                android:id="@+id/kon"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/ll_kon"
            >
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_consumption1"
                android:layout_width="160dp"
                android:layout_height="22dp"
                android:text="消费总金额："/>
            <TextView
                android:id="@+id/tv_discount2"
                android:layout_width="160dp"
                android:layout_height="22dp"
                android:layout_below="@+id/tv_consumption1"
                android:text="优惠券抵扣："/>
            <TextView
                android:id="@+id/tv_mi_discount3"
                android:layout_width="160dp"
                android:layout_height="22dp"
                android:layout_below="@+id/tv_discount2"
                android:text="米抵扣："/>
            <TextView
                android:id="@+id/tv_actualamount4"
                android:layout_width="160dp"
                android:layout_height="22dp"
                android:layout_below="@+id/tv_mi_discount3"
                android:textColor="@color/black"
                android:text="实际支付："/>

            <TextView
                android:id="@+id/tv_money1"
                android:layout_width="160dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true" />
            <TextView
                android:id="@+id/tv_money2"
                android:layout_width="160dp"
                android:layout_height="22dp"
                android:layout_below="@+id/tv_money1"
                android:layout_alignParentRight="true" />
            <TextView
                android:id="@+id/tv_mi_money3"
                android:layout_width="160dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_money2" />
            <TextView
                android:id="@+id/tv_money4"
                android:layout_width="160dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_mi_money3"
                android:textColor="@color/orange" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gray">
            </View>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
