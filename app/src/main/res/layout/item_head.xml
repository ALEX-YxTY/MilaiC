<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="47dp">
    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="47dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="30dp"
            android:layout_height="47dp"
            android:orientation="vertical">
        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="25"/>
        <TextView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/day"
            android:textSize="12dp"
            android:text="07月"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/dian"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:src="@drawable/icon_orange"
            android:layout_toRightOf="@+id/ll_1"/>
        <TextView
            android:id="@+id/tv_qiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dian"
            android:textSize="22dp"
            android:text="抢到"/>
        <TextView
            android:id="@+id/tv_mi1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_qiang"
            android:textColor="@color/colorAccent"
            android:textSize="22dp"
            android:text="200米"/>
      <View
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:background="#000000"
          android:layout_below="@+id/dian"
          android:layout_marginLeft="9dp"
          android:layout_toRightOf="@+id/ll_1"
          >
      </View>
    </RelativeLayout>

</LinearLayout>
