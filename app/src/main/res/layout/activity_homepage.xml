<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/orange_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="8dp">

        <include layout="@layout/title_bar_main" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_slogan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:padding="4dp"
                    android:textColor="@color/white"
                    android:background="#45505050"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentBottom="true"/>
                <LinearLayout
                    android:id="@+id/ll_circle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_activity"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.7"
                android:clipChildren="false">

                <TextView
                    android:id="@+id/tv_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:text="今日推荐"/>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tv_recommend"
                    android:textSize="16sp"
                    android:textColor="@color/white"/>

                <ImageView
                    android:id="@+id/iv_list"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_alignTop="@id/tv_recommend"
                    android:background="@drawable/btn_main_list"
                    android:elevation="3dp"/>

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_time"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:clipChildren="false"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/tv_numerator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentBottom="true"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_denominators"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_numerator"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentBottom="true"
                    android:textSize="17sp"
                    android:textColor="@color/white"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/drawerlayout_menu" android:id="@+id/menu"/>


</android.support.v4.widget.DrawerLayout>
