<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rl_title_location_scan"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/ll_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="24dp"
                android:background="@drawable/btn_location"/>
            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_half_tr"
                android:layout_marginLeft="@dimen/margin_18"
                android:textSize="@dimen/tv_42"
                android:text="南京"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_gray"
            android:textSize="@dimen/tv_54"
            android:layout_centerInParent="true"
            android:text="米 来"/>

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="2dp"
            android:src="@drawable/btn_scan"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="2dp"
            android:src="@drawable/btn_setting"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/gray"
        android:layout_alignParentBottom="true"/>

</LinearLayout>