<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rl_title_location_scan"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <!--title_bar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/iv_back"
            android:background="@drawable/ripple_effect">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:src="@drawable/btn_return2"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/margin_22"
                android:paddingRight="@dimen/margin_22"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_gray"
            android:textSize="@dimen/tv_54"
            android:layout_centerInParent="true"
            android:text="@string/city_sel"/>

        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:textSize="@dimen/tv_45"
            android:text="@string/save"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_22"
            android:clickable="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="2dp"
            android:src="@drawable/btn_share2"
            android:background="@drawable/ripple_effect"
            android:layout_alignParentRight="true" />

    </RelativeLayout>


</LinearLayout>