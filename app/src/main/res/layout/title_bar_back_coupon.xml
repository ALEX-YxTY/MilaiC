<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rl_title_location_scan"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <!--title_bar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/iv_back"
            android:background="@drawable/ripple_effect">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:src="@drawable/btn_return2"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/margin_22"
                android:paddingRight="@dimen/margin_22"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/iv_coupon_null"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ripple_effect">
            <ImageView
                android:layout_width="44dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_no_ticket"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/margin_22"
                android:paddingRight="@dimen/margin_22"/>
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/divider"/>


</LinearLayout>