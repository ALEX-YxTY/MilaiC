<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_gravity="start"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <LinearLayout
            android:id="@+id/ll_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_notice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_notice"
                android:background="@drawable/ripple_effect"
                android:layout_gravity="center_vertical"/>

            <com.meishipintu.milai.views.CircleImageView
                android:id="@+id/civ_head_view"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="8dp"
                android:background="@drawable/shape_cicrle_white"
                />

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_settings"
                android:background="@drawable/ripple_effect"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_name"
            android:layout_below="@id/ll_head"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            style="@style/MenuTextWhite"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tv_tel"
            android:layout_below="@id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MenuTextWhite"
            android:gravity="center"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_transparent"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"/>
    <!--主页-->
    <TextView
        android:id="@+id/tv_main"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="25dp"
        android:text="主页"
        android:background="@drawable/ripple_effect_rect"
        style="@style/MenuTextWhite"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_transparent"
        android:layout_marginRight="20dp"/>
    <!--我的米券-->
    <TextView
        android:id="@+id/tv_coupon"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="25dp"
        style="@style/MenuTextWhite"
        android:background="@drawable/ripple_effect_rect"
        android:text="我的米券" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_transparent"
        android:layout_marginRight="20dp"/>
    <!--我的收藏-->
    <TextView
        android:id="@+id/tv_collection"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="25dp"
        android:background="@drawable/ripple_effect_rect"
        style="@style/MenuTextWhite"
        android:text="我的收藏" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_transparent"
        android:layout_marginRight="20dp"/>
    <!--告诉朋友-->
    <TextView
        android:id="@+id/tv_share"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="25dp"
        android:background="@drawable/ripple_effect_rect"
        style="@style/MenuTextWhite"
        android:text="告诉朋友" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_transparent"
        android:layout_marginRight="20dp"/>


</LinearLayout>