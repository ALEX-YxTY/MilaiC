<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="my_tab">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/tv_30</item>
        <item name="android:paddingTop">@dimen/margin_8</item>
        <item name="android:paddingBottom">@dimen/margin_8</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:button">@null</item>
    </style>


    <style name="CustomCheckoxTheme">
        <item name="android:button">@drawable/bg_radio_agreement</item>
    </style>

    <style name="TransparentActivity" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/transparent_white</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--custom dialog-->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <!--<item name="android:windowFrame">@null</item>&lt;!&ndash;边框&ndash;&gt;-->
        <!--<item name="android:windowIsFloating">true</item>&lt;!&ndash;是否浮现在activity之上&ndash;&gt;-->
        <!--<item name="android:windowIsTranslucent">false</item>&lt;!&ndash;半透明&ndash;&gt;-->
        <!--<item name="android:windowBackground">@color/transparent</item>-->
        <!--<item name="android:background">@color/transparent</item>-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <!--<item name="android:backgroundDimEnabled">false</item>&lt;!&ndash;模糊&ndash;&gt;-->
    </style>

    <style name="TabStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize"> 18sp</item>
        <item name="android:textColor">@color/tvgray</item>
    </style>
</resources>
