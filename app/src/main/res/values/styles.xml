<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="my_tab">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/tv_30</item>
        <item name="android:paddingTop">@dimen/margin_8</item>
        <item name="android:paddingBottom">@dimen/margin_8</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:button">@null</item>
    </style>


    <style name="CustomCheckoxTheme">
        <item name="android:button">@drawable/bg_radio_agreement</item>
    </style>

    <style name="TransparentActivity" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/transparent_white</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
